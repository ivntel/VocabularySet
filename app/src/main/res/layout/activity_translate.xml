<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.geniusplaza.vocabularyset.TranslateActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewSpanishHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPANISH:"
        android:textSize="30dp"
        />
    <TextView
        android:id="@+id/textViewSpanish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPANISH WORD"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/textViewEnglishHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENGLISH:"
        android:textSize="30dp"/>
    <TextView
        android:id="@+id/textViewEnglish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENGLISH WORD"
        android:textSize="20dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spanish Pronunciation"
        android:id="@+id/buttonSpanish"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="English Pronunciation"
        android:id="@+id/buttonEnglish"/>
</LinearLayout>
