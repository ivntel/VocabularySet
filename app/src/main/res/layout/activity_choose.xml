<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.geniusplaza.vocabularyset.ChooseActivity">
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHOOSE WHAT YOU ARE TAKING A PICTURE OF:"
        android:layout_gravity="center"
        android:textSize="25dp"/>

    <Button
        android:id="@+id/buttonObject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="objectButtonClicked"
        android:text="Object" />

    <Button
        android:id="@+id/buttonText"
        android:layout_width="94dp"
        android:layout_height="45dp"
        android:text="Text"
        android:layout_gravity="center"
        android:onClick="textButtonClicked"/>

    <Button
        android:id="@+id/buttonLandmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Landmark"
        android:layout_gravity="center"
        android:onClick="landmarkButtonClicked"/>

</LinearLayout>
