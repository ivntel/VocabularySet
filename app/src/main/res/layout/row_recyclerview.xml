<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/textViewAddWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:hint="Enter Word" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/textViewOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:hint="#"

            android:inputType="none" />

        <Spinner
            android:id="@+id/spinnerWordType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/vocabEditVocabWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:clickable="true"
            android:visibility="invisible"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_save" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/vocabDeleteVocabWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:clickable="true"
            android:visibility="invisible"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_delete" />

    </LinearLayout>

    <EditText
        android:id="@+id/textViewAddMeaning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Meaning" />

    <EditText
        android:id="@+id/textViewAddSentence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Sentence" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_margin="5dp"
        android:background="@color/colorPrimaryDark"
        android:padding="5dp" />
</LinearLayout>