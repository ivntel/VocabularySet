<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flipBackConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.geniusplaza.vocabularyset.ShowActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/flippedCard"
        android:layout_width="365dp"
        android:layout_height="244dp"
        android:onClick="cardViewClicked"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="16dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/meaningTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="23dp"
                android:gravity="center"
                android:text="MEANING" />

            <TextView
                android:id="@+id/displayMeaning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/meaningTextView"
                android:layout_below="@+id/meaningTextView"
                android:layout_marginTop="43dp"
                android:fontFamily="casual"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:text="TextView"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sentenceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/displayMeaning"
                android:layout_below="@+id/displayMeaning"
                android:layout_marginTop="42dp"
                android:gravity="center"
                android:text="SENTENCE" />

            <TextView
                android:id="@+id/displaySentence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="31dp"
                android:fontFamily="casual"
                android:gravity="center"
                android:text="TextView"
                android:textStyle="bold" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>