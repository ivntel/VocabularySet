<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.geniusplaza.vocabularyset.DictionaryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewDefinitionHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MEANING:"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textViewDefinition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewExampleHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SENTENCE:"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textViewExample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="20dp" />

        <Button
            android:id="@+id/addToDatabaseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:onClick="addToDatabaseButtonClicked"
            android:text="Save to remember" />
    </LinearLayout>
</ScrollView>