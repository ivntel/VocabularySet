<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.geniusplaza.vocabularyset.EditVocabSet">

    <android.support.v7.widget.CardView
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editTextTitle"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true" />


            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/editTextTitle"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/editTextTitle"
                android:text="TITLE" />


            <EditText
                android:id="@+id/editTextDescription"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textViewDescription"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textViewTitle"
                android:layout_marginTop="44dp"
                android:layout_toStartOf="@+id/editTextDescription"
                android:text="DESCRIPTION" />

            <Spinner
                android:id="@+id/spinnerLanguage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextDescription"
                android:layout_marginTop="34dp"
                android:layout_toEndOf="@+id/textViewDescription"
                android:spinnerMode="dropdown"/>

            <TextView
                android:id="@+id/textViewLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/spinnerLanguage"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/spinnerLanguage"
                android:layout_toStartOf="@+id/editTextDescription"
                android:text="LANGUAGE" />

            <Button
                android:id="@+id/buttonCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="CANCEL"
                android:layout_alignParentBottom="true"
                android:layout_alignEnd="@+id/textViewChooseIcon"
                android:onClick="cancelButtonClicked"/>

            <Button
                android:id="@+id/buttonSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/buttonCancel"
                android:layout_marginEnd="42dp"
                android:text="SAVE"
                android:onClick="saveButtonClicked"/>

            <TextView
                android:id="@+id/textViewChooseIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textViewLanguage"
                android:layout_marginTop="36dp"
                android:layout_toStartOf="@+id/spinnerLanguage"
                android:text="CHOOSE ICON" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/textViewChooseIcon"
                android:layout_marginTop="79dp"
                android:layout_alignParentEnd="true"
                android:layout_above="@+id/buttonSave"
                android:id="@+id/recyclerViewEditVS"
                android:visibility="gone"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/floatingActionButton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textViewChooseIcon"
                android:layout_marginEnd="11dp"
                android:layout_toStartOf="@+id/buttonSave"
                android:clickable="true"
                app:fabSize="mini"
                app:srcCompat="@drawable/ic_action_name" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/floatingActionButton6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/buttonSave"
                android:layout_alignTop="@+id/floatingActionButton5"
                android:layout_marginEnd="17dp"
                android:clickable="true"
                app:fabSize="mini"
                app:srcCompat="@drawable/ic_action_name" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
